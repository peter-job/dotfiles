[user]
	name = {{ .name }}
	email = {{ .email }}
[advice]
	addEmptyPathspec = false
	statusHints = false
[pull]
  	rebase = true
[rebase]
  	autoStash = true
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[oh-my-zsh]
	hide-status = 1
	hide-dirty = 1
[push]
	autoSetupRemote = true
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[credential]
	# todo: macos specific, switch template based on OS
	helper = osxkeychain
[pager]
	branch = false
[alias]
	# Show the log as a graph
	graph = log --all --decorate --oneline --graph

	# Save current state as a stash with an optional message from args
	save = "!f() { \
		msg=\"$*\"; \
		git stash push --include-untracked -m \"$msg\"; \
		git stash apply; \
	}; f"

	# Pretty print the diff using bat as a pager
	diffp = "!f() { \
		git diff --name-only --relative --diff-filter=d | xargs bat --diff; \
	}; f"
